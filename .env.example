# Port for the application to run on
PORT=3000

# PostgreSQL Database Configuration
DB_USER=your_db_user
DB_HOST=localhost
DB_DATABASE=streak_sync_db
DB_PASSWORD=your_db_password
DB_PORT=5432

# Session Secret for express-session
# Use a long, random string for security
SESSION_SECRET=your_very_secret_session_key

# Google OAuth 2.0 Credentials
# Get these from Google Cloud Console (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Callback URL for Google OAuth
# This must match the one configured in your Google Cloud Console project
# and in passport-google-oauth2 strategy in app.js
# Example: http://localhost:3000/auth/google/streaksync
CALLBACK_URL=http://localhost:3000/auth/google/streaksync

# Note: For local development, DB_HOST is typically 'localhost'.
# For production, these values will be specific to your deployment environment.
# Remember to create a .env file and fill in your actual credentials.
# DO NOT commit your .env file to version control. Add .env to .gitignore.
